@model Shards.DTOS.AuthDtos.RegisterDto
@{
    ViewData["Title"] = "Admin Registration";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-content">
    <!-- Page Title -->
    <h2>Create New Account</h2>
    <p>Register now to access the Inventory Management System</p>

    <!-- Registration Form -->
    <form asp-area="Admin" asp-controller="Auth" asp-action="Register" method="post">
        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <!-- First Name Input -->
        <div class="form-group">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <div class="input-group">
                <input asp-for="FirstName" 
                       class="form-control" 
                       placeholder="John"
                       required />
                <i class="fas fa-user"></i>
            </div>
            <span asp-validation-for="FirstName" class="field-validation-error"></span>
        </div>

        <!-- Last Name Input -->
        <div class="form-group">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <div class="input-group">
                <input asp-for="LastName" 
                       class="form-control" 
                       placeholder="Doe"
                       required />
                <i class="fas fa-user"></i>
            </div>
            <span asp-validation-for="LastName" class="field-validation-error"></span>
        </div>

        <!-- Email Input -->
        <div class="form-group">
            <label asp-for="Email" class="form-label">Email Address</label>
            <div class="input-group">
                <input asp-for="Email" 
                       class="form-control" 
                       placeholder="email@example.com"
                       type="email"
                       required />
                <i class="fas fa-envelope"></i>
            </div>
            <span asp-validation-for="Email" class="field-validation-error"></span>
        </div>

        <!-- Role Selection Dropdown - Admin can register all roles -->
        <div class="form-group">
            <label asp-for="role" class="form-label">Role</label>
            <div class="input-group">
                <select asp-for="role" class="form-control" required>
                    <option value="">Select Role</option>
                    <option value="Admin">Admin</option>
                    <option value="Manager">Manager</option>
                    <option value="Employee">Employee</option>
                </select>
                <i class="fas fa-user-shield"></i>
            </div>
            <span asp-validation-for="role" class="field-validation-error"></span>
        </div>

        <!-- Password Input with Strength Meter -->
        <div class="form-group">
            <label asp-for="Password" class="form-label">Password</label>
            <div class="input-group">
                <input asp-for="Password" 
                       class="form-control" 
                       placeholder="••••••••"
                       type="password"
                       minlength="8"
                       required />
                <i class="fas fa-lock"></i>
            </div>
            <span asp-validation-for="Password" class="field-validation-error"></span>
            <!-- Password strength meter will be added here by JavaScript -->
        </div>

        <!-- Confirm Password Input -->
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <div class="input-group">
                <input asp-for="ConfirmPassword" 
                       class="form-control" 
                       placeholder="••••••••"
                       type="password"
                       required />
                <i class="fas fa-lock"></i>
            </div>
            <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Create Account
        </button>

        <!-- Login Link -->
        <a asp-area="Admin" asp-controller="Auth" asp-action="Login" class="auth-link">
            Already have an account? <strong>Sign In</strong>
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
