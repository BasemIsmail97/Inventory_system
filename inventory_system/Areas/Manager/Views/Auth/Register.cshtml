@model Shards.DTOS.AuthDtos.RegisterDto
@{
    ViewData["Title"] = "Register Employee";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-content">
    <!-- Page Title -->
    <h2>Register Employee</h2>
    <p>Create a new employee account</p>

    <!-- Registration Form -->
    <form asp-area="Manager" asp-controller="Auth" asp-action="Register" method="post">
        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <!-- First Name Input -->
        <div class="form-group">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <div class="input-group">
                <input asp-for="FirstName" 
                       class="form-control" 
                       placeholder="John"
                       required />
                <i class="fas fa-user"></i>
            </div>
            <span asp-validation-for="FirstName" class="field-validation-error"></span>
        </div>

        <!-- Last Name Input -->
        <div class="form-group">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <div class="input-group">
                <input asp-for="LastName" 
                       class="form-control" 
                       placeholder="Doe"
                       required />
                <i class="fas fa-user"></i>
            </div>
            <span asp-validation-for="LastName" class="field-validation-error"></span>
        </div>

        <!-- Email Input -->
        <div class="form-group">
            <label asp-for="Email" class="form-label">Email Address</label>
            <div class="input-group">
                <input asp-for="Email" 
                       class="form-control" 
                       placeholder="employee@example.com"
                       type="email"
                       required />
                <i class="fas fa-envelope"></i>
            </div>
            <span asp-validation-for="Email" class="field-validation-error"></span>
        </div>

        <!-- Role Field - Hidden, Manager can only register Employee -->
        <input type="hidden" asp-for="role" value="Employee" />

        <!-- Password Input -->
        <div class="form-group">
            <label asp-for="Password" class="form-label">Password</label>
            <div class="input-group">
                <input asp-for="Password" 
                       class="form-control" 
                       placeholder="••••••••"
                       type="password"
                       minlength="8"
                       required />
                <i class="fas fa-lock"></i>
            </div>
            <span asp-validation-for="Password" class="field-validation-error"></span>
        </div>

        <!-- Confirm Password Input -->
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <div class="input-group">
                <input asp-for="ConfirmPassword" 
                       class="form-control" 
                       placeholder="••••••••"
                       type="password"
                       required />
                <i class="fas fa-lock"></i>
            </div>
            <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Create Employee Account
        </button>

        <!-- Back to Login Link -->
        <a asp-area="Manager" asp-controller="Auth" asp-action="Login" class="auth-link">
            Back to <strong>Login</strong>
        </a>

        <!-- Info Box -->
        <div class="info-box">
            <p>
                <i class="fas fa-info-circle"></i>
                The account will be created with Employee role
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
