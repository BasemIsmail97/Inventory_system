<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory Management System</title>
    
    <!-- Google Fonts - Poppins for modern look -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome 6 for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    
    <!-- Custom CSS files -->
    <link rel="stylesheet" href="~/css/auth-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-responsive.css" asp-append-version="true" />
</head>
<body>
    <!-- Animated gradient background with floating shapes -->
    <div class="auth-background">
        <div class="gradient-overlay"></div>
        <div class="animated-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
        </div>
    </div>

    <!-- Main container - centered vertically and horizontally -->
    <div class="auth-container">
        <!-- Glassmorphism card -->
        <div class="auth-card">
            <!-- Logo section at the top -->
            <div class="auth-logo">
                <img src="~/images/logo.png" alt="Logo" />
                <h1>Inventory Management</h1>
            </div>

            <!-- Main content area - forms will be rendered here -->
            <div class="auth-content">
                @RenderBody()
            </div>

            <!-- Footer with copyright -->
            <div class="auth-footer">
                <p>&copy; @DateTime.Now.Year All Rights Reserved</p>
            </div>
        </div>
    </div>

    <!-- Toast notification container - positioned at top center -->
    <div id="toast-container" class="toast-container"></div>

    <!-- JavaScript libraries -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    
    <!-- Custom JavaScript files -->
    <script src="~/js/auth-animations.js" asp-append-version="true"></script>
    <script src="~/js/password-toggle.js" asp-append-version="true"></script>
    <script src="~/js/password-strength.js" asp-append-version="true"></script>
    <script src="~/js/form-validation.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
